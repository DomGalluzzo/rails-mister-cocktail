<section>
  <div class="container">
    <div class="title">
      <%= link_to new_cocktail_dose_path(@cocktail) do %>
        <i class="far fa-plus-square fa-border fa-sm"></i>  
      <% end %>
      
      <%= link_to "", cocktail_path(@cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "far fa-trash-alt fa-sm ml-1 mr-2"
      %>
      <%= @cocktail.name %>
      
      <div class="row">
        <div class="col-sml-12 col-lg-4">
          <div class="card-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg)">
            <% iterator = 1 %>
            <% @cocktail.doses.each do |dose| %>
              <li><%= iterator %>) <strong><%= dose.ingredient.name %></strong></p>
              <li class="description"><i class="fas fa-angle-double-right fa-xs"></i><%= dose.description %></p>
              <% iterator +=1 %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>