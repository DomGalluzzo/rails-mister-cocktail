<div class="container pad20">

    <!-- Grid row -->
  <div class="row mt-4">
    <!-- Card -->
    <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-4 py-2">
        <%= link_to cocktail_path(cocktail), class: "card-link" do %>
          <div class="card">
          <%= cl_image_tag("fd8mq2opkkqlzscr0qe8", width: 400, height: 300, crop: :fill) %>
            <div class="card-description">
              <%= cocktail.name %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>


<!-- Close main div -->
</div>
